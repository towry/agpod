{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": false
    }
  ],
  "packages": {
    ".": {
      "release-type": "rust",
      "package-name": "agpod",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        "Cargo.toml",
        "crates/agpod/Cargo.toml",
        "crates/agpod-core/Cargo.toml",
        "crates/agpod-diff/Cargo.toml",
        "crates/agpod-kiro/Cargo.toml",
        "crates/agpod-vcs-path/Cargo.toml"
      ]
    }
  }
}
